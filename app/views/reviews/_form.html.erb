<%= form_tag("/reviews/create", :method => "post") do %>

  <div class="field">
    <%= label_tag 'review[name]' %><br />
    <%= text_field_tag 'review[name]' %>
  </div>
  <div class="field">
    <%= label_tag 'review[address]'%><br />
    <%= text_field_tag 'review[address]' %>
  </div>
  <div class="field">
    <%= label_tag 'review[email]' %><br />
    <%= text_field_tag 'review[email]' %>
  </div>
  <div class="field">
    <%= label_tag 'review[phone]' %><br />
    <%= text_field_tag 'review[phone]' %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
